{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@/*": ["./*"]
    },

    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "strict": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
